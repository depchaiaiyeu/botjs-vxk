{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "nodejs_20",
            "python3",
            "gcc",
            "gnumake",
            "pkg-config",
            "xz",
            "ffmpeg",
            "pixman",
            "cairo",
            "pango",
            "libjpeg",
            "giflib",
            "librsvg"
          ]
        },
        "install": {
          "cmds": [
            "npm install --omit=dev --no-audit --no-fund",
            "npm cache clean --force",
            "rm -rf /tmp/*",
            "rm -rf /root/.npm/_cacache"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node index.js"
  }
}
