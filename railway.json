{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "nodejs_20",
            "python3",
            "gcc",
            "gnumake",
            "pkg-config",
            "xz",
            "ffmpeg",
            "pixman",
            "cairo",
            "pango",
            "libjpeg",
            "giflib",
            "librsvg"
          ]
        },
        "install": {
          "cmds": [
            "npm ci --omit=dev --ignore-scripts",
            "npm rebuild canvas lzma-native",
            "npm cache clean --force"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node index.js"
  }
}
