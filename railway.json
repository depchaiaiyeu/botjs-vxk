{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "nodejs_20",
            "python3",
            "gnumake",
            "gcc",
            "gnutar",
            "xz",
            "ffmpeg"
          ]
        },
        "install": {
          "cmds": [
            "export YOUTUBE_DL_SKIP_PYTHON_CHECK=1",
            "npm install"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node index.js"
  }
}
