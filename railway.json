{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "nodejs_20",
            "python3",
            "gcc",
            "gnumake",
            "pkg-config",
            "xz",
            "ffmpeg",
            "pixman",
            "cairo",
            "pango",
            "libjpeg",
            "giflib",
            "librsvg",
            "autoconf",
            "automake",
            "libtool",
            "bzip2"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node index.js"
  }
}
