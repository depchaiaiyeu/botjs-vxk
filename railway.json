{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "nodejs",
            "python3",
            "ffmpeg"
          ]
        },
        "install": {
          "cmds": ["npm install"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node index.js"
  }
}
